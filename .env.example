# Environment Configuration Template
# Copy this file to .env and update with your actual values

# AWS Configuration
AWS_REGION=us-east-1
CDK_DEFAULT_ACCOUNT=your-aws-account-id
CDK_DEFAULT_REGION=us-east-1

# JWT Secret ARN (optional - will auto-generate if not provided)
# JWT_SECRET_ARN=arn:aws:secretsmanager:us-east-1:your-account-id:secret:zik/jwtSecret-xxxxxx

# API Gateway
API_ENDPOINT=your-api-gateway-url

# Cognito Configuration
USER_POOL_ID=your-user-pool-id
USER_POOL_CLIENT_ID=your-user-pool-client-id

# DynamoDB Tables (automatically created by CDK)
CHAT_MESSAGES_TABLE_NAME=your-chat-messages-table-name
GOALS_TABLE_NAME=your-goals-table-name
TASKS_TABLE_NAME=your-tasks-table-name
USERS_TABLE_NAME=your-users-table-name
RECURRENCE_RULES_TABLE_NAME=your-recurrence-rules-table-name
MILESTONES_TABLE_NAME=your-milestones-table-name

# DynamoDB Indexes
USER_ID_DUE_DATE_INDEX=userId-dueDate-index

# Step Functions & Lambda ARNs (automatically created by CDK)
ROADMAP_GENERATOR_WORKFLOW_ARN=your-roadmap-generator-workflow-arn
DAILY_QUEST_GENERATOR_LAMBDA_ARN=your-daily-quest-generator-lambda-arn

# Optional: For development/testing
DEBUG=false
LOG_LEVEL=info

# Rate Limiting (optional overrides)
# RELAX_RATE_LIMITS=false
# TEST_DELAY_MS=1000
